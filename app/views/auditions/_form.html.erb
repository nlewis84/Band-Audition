<%= form_for [current_user, @audition] do |f| %>
<div class="parent">
    <div class="div1 center">

        <%= f.label :school %>
        <%= f.text_field :school %>

        <%= f.label :year %>
        <%= f.date_field :year %>
        <p>Instruments (leave blank if unused)</p>
        <%= f.fields_for :instruments do |inst| %>
        <li>
            <%= inst.label :name %>
            <%= inst.text_field :name %>

            <%= inst.label :available_spots %>
            <%= inst.number_field :available_spots %>
        </li>
        <% end %>

        <%= f.submit %>

    </div>
</div>
<% end %>