<h1>Show Audition</h1>
<p>Audition Code: <%= @audition.code %></p>

<div>
<% @audition.instruments.each do |instrument| %>
    <div>
    <%= instrument.name %> - <%= instrument.remaining_spots %> available
    <% instrument.players.each do |player| %>
        <div>
        <%= link_to "#{player.first_name} #{player.last_name}", player_path(player) %>
        </div>
    <% end %>
    </div>
<% end %>
</div>