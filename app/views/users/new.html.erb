<h1>Sign up!</h1>

<%= form_for(@user) do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
    
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.submit "Sign up" %>

<% end %>